<h3 class="w-10 text-center heading-ter">Login</h3>
<div class="mt-4 px-3">
   <form action="" method="post" autocomplete="off">
       <div class="form-group form-row">
            <div class="d-flex space-c align-c px-1">
                <i class="ion ion-email"></i>
            </div>
           <input type="email" class="form-cols input-init anm-line"
            placeholder="Email" name="email">
       </div>
       <div class="form-group form-row">
            <div class="d-flex space-c align-c px-1">
                <i class="ion ion-key"></i>
            </div>
           <input type="password" class="form-cols input-init anm-line"
            placeholder="password" name="password">
       </div>
       <div class="form-group d-flex space-e mt-4">
           <button type="submit" class="btn btn-prime ripple">
                <i class="icon-left ion ion-flash"></i>
                Login
           </button>
           <a href="/signup" class="btn btn-white text-dark ripple">
                <i class="icon-left ion ion-jet"></i>
                signup
           </a>
       </div>
       <div class="form-group text-center mt-3">
            Forgot Password ?<a href="/reset" class="ml-2 text-dark text-upr link link-dark">Reset</a>
       </div>
   </form>
</div>
